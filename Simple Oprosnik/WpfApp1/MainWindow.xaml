<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тест по рентабельности" Height="545.875" Width="627.017"
        Background="#f4f4f4" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Стиль для кнопки с закругленными углами -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"  
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для RadioButton с закругленными углами -->
        <Style TargetType="RadioButton">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="0,5,0,5" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#333" />
            <Setter Property="BorderBrush" Value="#ccc" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8" Padding="8">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="EllipseDot" Width="20" Height="20" Stroke="Gray" StrokeThickness="2" Margin="0,0,10,0">
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="Transparent" />
                                    </Ellipse.Fill>
                                </Ellipse>
                                <ContentPresenter />
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="EllipseDot" Property="Fill" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для TextBlock -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Foreground" Value="#333" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="190" />
        </Grid.ColumnDefinitions>

        <!-- Основное содержимое -->
        <StackPanel Margin="10" Grid.Column="0">
            <TextBlock Name="QuestionText" Text="Вопрос" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20" />
            <StackPanel Margin="0,10,0,0">
                <RadioButton Name="Option1" GroupName="Answers" Content="Вариант 1" />
                <RadioButton Name="Option2" GroupName="Answers" Content="Вариант 2" />
                <RadioButton Name="Option3" GroupName="Answers" Content="Вариант 3" />
                <RadioButton Name="Option4" GroupName="Answers" Content="Вариант 4" />
            </StackPanel>
            <Button Name="SubmitButton" Content="Ответить" Width="120" Height="40" Click="SubmitButton_Click" />
            <TextBlock x:Name="ScoreText" Text="Ваши баллы: 0" FontSize="16" Margin="150,10,0,0" HorizontalAlignment="Left" RenderTransformOrigin="0.482,-0.685" Height="23" />
        </StackPanel>

        <!-- Выдвигающееся меню -->
        <Expander Grid.Column="1" Header="Вопросы" HorizontalAlignment="Right" Width="180">
            <StackPanel>
                <ItemsControl Name="QuestionsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding DisplayText}" Margin="5" 
                                Click="QuestionButton_Click" Tag="{Binding Index}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Expander>
    </Grid>
</Window>
