<Window x:Class="BusinessLetterGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Генератор деловых писем" Height="300" Width="400">
    <Grid>
        <Label Content="Имя адресата:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="RecipientNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,10,0,0" Width="200"/>

        <Label Content="Выберите дату:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,66,0,0"/>
        <DatePicker x:Name="DatePickerControl" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,66,0,0" Width="200"/>

        <Label Content="Телефон:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,96,0,0"/>
        <TextBox x:Name="PhoneTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,96,0,0" Width="200" PreviewTextInput="PhoneTextBox_PreviewTextInput"/>

        <Label Content="Ваше имя:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,36,0,0"/>
        <TextBox x:Name="SenderNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,36,0,0" Width="200"/>

        <Button Content="Сгенерировать письмо" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,140,0,0" Width="150" Click="GenerateLetterButton_Click"/>
    </Grid>
</Window>
