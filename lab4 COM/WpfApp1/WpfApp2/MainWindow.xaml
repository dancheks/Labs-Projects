<Window x:Class="ExcelEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Excel Editor" Height="450" Width="800"
        MinWidth="600" MinHeight="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Загрузить Excel" Click="LoadExcel_Click" Margin="5" Padding="10" Visibility="Collapsed"/>
            <Button Content="Добавить строку" Click="AddRow_Click" Margin="5" Padding="10"/>
            <Button Content="Сохранить в Excel" Click="SaveExcel_Click" Margin="5" Padding="10"/>
        </StackPanel>

        <!-- Основной DataGrid -->
        <DataGrid x:Name="dataGrid" Grid.Row="1" Margin="5"
                  CanUserAddRows="False"
                  CanUserDeleteRows="True"
                  SelectionUnit="Cell"
                  AutoGenerateColumns="False"
                  ColumnWidth="*"/>

        <!-- DataGrid для строки "Итого" -->
        <DataGrid x:Name="summaryGrid" Grid.Row="2" Margin="5"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  ColumnWidth="*"
                  Height="40
                  "/>

        <StatusBar Grid.Row="3">
            <StatusBarItem Content="Готово"/>
        </StatusBar>
    </Grid>
</Window>
