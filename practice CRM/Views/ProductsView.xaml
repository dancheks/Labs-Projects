<UserControl x:Class="SqlliteViewer.Views.ProductsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:helpers="http://metro.mahapps.com/winfx/xaml/shared"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d">
    <DockPanel Margin="10">

        <!-- Форма ввода -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical" Margin="0,0,0,10" Background="{DynamicResource MahApps.Brushes.Accent4}">
            <DockPanel>
                <!-- Блок полей -->
                <StackPanel Orientation="Vertical">
                    <WrapPanel>
                        <TextBox x:Name="NameBox" Width="150" Margin="5" Background="{DynamicResource MahApps.Brushes.Accent2}"
                         controls:TextBoxHelper.Watermark="Название"/>
                        <TextBox x:Name="WeightBox" Width="100" Margin="5" Background="{DynamicResource MahApps.Brushes.Accent2}"
                         controls:TextBoxHelper.Watermark="Вес"/>
                        <TextBox x:Name="SpeedBox" Width="100" Margin="5" Background="{DynamicResource MahApps.Brushes.Accent2}"
                         controls:TextBoxHelper.Watermark="Скорость"/>
                        <TextBox x:Name="StressBox" Width="100" Margin="5" Background="{DynamicResource MahApps.Brushes.Accent2}"
                         controls:TextBoxHelper.Watermark="Нагрузка"/>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBox x:Name="LengthBox" Width="100" Margin="5" Background="{DynamicResource MahApps.Brushes.Accent2}"
                         controls:TextBoxHelper.Watermark="Длина"/>
                        <TextBox x:Name="WidthBox" Width="100" Margin="5" Background="{DynamicResource MahApps.Brushes.Accent2}"
                         controls:TextBoxHelper.Watermark="Ширина"/>
                        <TextBox x:Name="NumberInPalletBox" Width="120" Margin="5" Background="{DynamicResource MahApps.Brushes.Accent2}"
                         controls:TextBoxHelper.Watermark="Шт. в паллете"/>
                    </WrapPanel>
                </StackPanel>

                <!-- Кнопки управления справа -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0,0,0" VerticalAlignment="Stretch">
                    <Button Height="50" Width="100"
Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
Click="Add_Click" Margin="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <iconPacks:PackIconMaterial Kind="PlusBox" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Добавить" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>


                    <Button Margin="5" Height="50" Width="100"
Click="Update_Click"
Style="{StaticResource MahApps.Styles.Button.Square.Accent}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <iconPacks:PackIconMaterial Kind="ContentSaveEdit" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock VerticalAlignment="Center" Text="Сохранить"/>
                        </StackPanel>
                    </Button>

                    <Button Margin="5" Height="50" Width="100"
Click="Delete_Click"
Style="{StaticResource MahApps.Styles.Button.Square.Accent}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <iconPacks:PackIconMaterial Kind="TrashCanOutline" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock VerticalAlignment="Center" Text="Удалить"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </StackPanel>
        
        <!-- DataGrid с данными -->
        <DataGrid x:Name="ProductsGrid"
           AutoGenerateColumns="False"
           SelectionChanged="ProductsGrid_SelectionChanged"
           ColumnWidth="*"
Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="Название"/>
                <DataGridTextColumn Binding="{Binding Weight}" Header="Вес"/>
                <DataGridTextColumn Binding="{Binding Speed}" Header="Скорость"/>
                <DataGridTextColumn Binding="{Binding Stress}" Header="Нагрузка"/>
                <DataGridTextColumn Binding="{Binding Length}" Header="Длина"/>
                <DataGridTextColumn Binding="{Binding Width}" Header="Ширина"/>
                <DataGridTextColumn Binding="{Binding Number_In_Pallet}" Header="Шт. в паллете"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
    