<Window x:Class="HopfieldNetworkApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сеть Хопфилда - распознавание образов" Height="700" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Нарисуйте образ (5x5) или загрузите один из обученных:" 
                   Margin="5" FontWeight="Bold"/>

        <UniformGrid Grid.Row="1" Rows="1" Columns="5" Margin="5">
            <Button Content="A" Tag="0" Click="LoadPatternButton_Click" Margin="2"/>
            <Button Content="B" Tag="1" Click="LoadPatternButton_Click" Margin="2"/>
            <Button Content="C" Tag="2" Click="LoadPatternButton_Click" Margin="2"/>
            <Button Content="D" Tag="3" Click="LoadPatternButton_Click" Margin="2"/>
            <Button Content="Тест всех" Click="TestAllPatternsButton_Click" Margin="2" Visibility="Collapsed"/>
        </UniformGrid>

        <Grid x:Name="MainGrid" Grid.Row="2" Width="250" Height="250" 
              HorizontalAlignment="Center" VerticalAlignment="Center">
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button Content="Распознать" Click="RecognizeButton_Click" Margin="5" Padding="10,5"/>
            <Button Content="Очистить" Click="ClearButton_Click" Margin="5" Padding="10,5"/>
        </StackPanel>

        <GroupBox Grid.Row="4" Header="Журнал распознавания" Margin="5">
            <ScrollViewer x:Name="RecognitionLogScroll" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="RecognitionLogText" TextWrapping="Wrap" FontFamily="Consolas" Margin="5"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>