<Window x:Class="BranchAndBoundVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BranchAndBoundVisualizer"
        mc:Ignorable="d"
        Title="Branch and Bound Algorithm Visualizer" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Visualization Area -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Canvas x:Name="TreeCanvas" Width="12000" Height="1000" Background="White"/>
        </ScrollViewer>

        <!-- Controls -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

        <!-- Information Panel -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <GroupBox Grid.Row="0" Header="Cost Matrix" Margin="5">
                <DataGrid x:Name="CostMatrixGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="From/To" Binding="{Binding RowHeader}" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <Button x:Name="RunButton" Content="Run Algorithm" Click="RunButton_Click" Margin="0,0,5,0" Padding="10,5"/>
                <Button x:Name="StepButton" Content="Step" Click="StepButton_Click" Padding="10,5" IsEnabled="False"/>
            </StackPanel>

            <GroupBox Grid.Row="2" Header="Current Path" Margin="5">
                <TextBlock x:Name="CurrentPathText" TextWrapping="Wrap" Margin="5"/>
            </GroupBox>

            <GroupBox Grid.Row="3" Header="Best Solution" Margin="5">
                <TextBlock x:Name="BestSolutionText" TextWrapping="Wrap" Margin="5"/>
            </GroupBox>

            <GroupBox Grid.Row="4" Header="Algorithm Log" Margin="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="LogText" TextWrapping="Wrap" Margin="5"/>
                </ScrollViewer>
            </GroupBox>

            <Slider Grid.Row="5" x:Name="AnimationSpeedSlider" Minimum="0" Maximum="1000" Value="500" Margin="5" 
                    ValueChanged="AnimationSpeedSlider_ValueChanged"/>
        </Grid>
    </Grid>
</Window>